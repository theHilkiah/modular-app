{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.7.*"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0",
        "laravel/tinker": "^1.0",
        "nwidart/laravel-modules": "^3.3"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://nova.laravel.com"
    }],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Admin\\": "admin/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('.env') || copy('.env.local', '.env');\"",
            "@php -r \"copy('vendor\/novam-modules\/.', 'admin\/');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('admin') || mkdir('admin');\"",
            "@php -r \"shell_exec('git clone git@github.com:novam-modules/calendar.git admin/calendar');\"",
            "@php -r \"shell_exec('git clone git@github.com:novam-modules/dashboard.git admin/dashboard');\"",
            "@php -r \"shell_exec('git clone git@github.com:novam-modules/personell.git admin/personell');\"",
            "@php -r \"shell_exec('git clone git@github.com:novam-modules/projects.git admin/projects');\"",
            "@php -r \"shell_exec('git clone git@github.com:novam-modules/timetrack.git admin/timetrack');\""

        ],
        "post-update-cmd": [
            "@post-root-package-install"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
